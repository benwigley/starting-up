
$(document).ready ->

  # Only run this on the splash page
  return unless $('.splash-bg')[0]


  # Image replacement in seconds
  seconds = 10

  images = [
    "<%= image_path('new-zealand/auckland.jpg') %>"
    "<%= image_path('new-zealand/mt-cook.jpg') %>"
    "<%= image_path('new-zealand/queenstown.jpg') %>"
    "<%= image_path('new-zealand/wellington.jpg') %>"
    "<%= image_path('new-zealand/canoe.jpg') %>"
  ]
  currentImageIndex = 0
  currentImage = images[currentImageIndex]

  window.setInterval ->

    # Set the first image
    $('.splash-bg').css('background-image', "url('#{currentImage}')")

    # Move on to the next image
    currentImageIndex += 1
    currentImageIndex = 0 unless images[currentImageIndex]
    currentImage = images[currentImageIndex]

  , seconds * 1000
